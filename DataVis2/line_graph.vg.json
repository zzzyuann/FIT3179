{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Netflix Movies vs TV Shows Over the Years",
  "width": 480,
  "height": 340,
  "data": {
    "url": "netflix_titles.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "Count"
        }
      ],
      "groupby": [
        "release_year",
        "type"
      ]
    },
    {
      "filter": "datum.release_year >= 1980"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3
      },
      "encoding": {
        "x": {"field": "release_year", "type": "quantitative", "title": "Release Year", "axis": {"labelAngle": 0, "tickCount": 10, "format": "d"}},
        "y": {"field": "Count", "type": "quantitative", "title": "Number of Titles"},
        "color": {"field": "type", "type": "nominal", "title": "Type", "scale": {"scheme": "tableau10"}},
        "tooltip": [
          {"field": "release_year", "title": "Year"},
          {"field": "type", "title": "Type"},
          {"field": "Count", "title": "Movies"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 2018, "y": 767, "x2": 1997, "y2": 620, 
            "textX": 1985, "textY": 600, 
            "text": "Apple TV+ & Disney+ preparing to launch"
          }
        ]
      },
      "layer": [
        {
          "mark": {"type": "rule", "strokeWidth": 1, "stroke": "#222"},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "title": "Line Start"},
            "y": {"field": "y", "type": "quantitative"},
            "x2": {"field": "x2"},
            "y2": {"field": "y2"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 5,
            "dy": 0,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "#222"
          },
          "encoding": {
            "x": {"field": "textX", "type": "quantitative"},
            "y": {"field": "textY", "type": "quantitative"},
            "text": {"field": "text"}
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": "transparent"}, "axis": {"grid": true}}
}
