{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Netflix Titles by Release Decade",
  "width": 400,
  "height": 400,
  "data": {
    "url": "netflix_titles.csv"
  },
  "params": [
    {
      "name": "typeSelect",
      "value": "Movie",
      "bind": {
        "input": "select",
        "options": ["Movie", "TV Show"],
        "labels": ["Movies", "TV Shows"],
        "name": "Select Type: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.type == typeSelect"},
    {
      "calculate": "datum.release_year < 1980 ? 'Before 1980' : floor(datum.release_year/10)*10 + 's'",
      "as": "Decade"
    },
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Decade"]
    },
    {
      "window": [{"op": "sum", "field": "Count", "as": "Total"}]
    },
    {
      "calculate": "round((datum.Count / datum.Total) * 100, 1)",
      "as": "Percentage"
    }
  ],
  "mark": {"type": "arc", "innerRadius": 70, "stroke": "white"},
  "encoding": {
    "theta": {"field": "Count", "type": "quantitative"},
    "color": {
      "field": "Decade",
      "type": "nominal",
      "title": "Release Decade",
      "sort": ["Before 1980", "1980s", "1990s", "2000s", "2010s", "2020s"]
    },
    "tooltip": [
      {"field": "Decade", "title": "Decade"},
      {"field": "Count", "title": "Number of Titles"},
      {"field": "Percentage", "title": "Percentage (%)"}
    ]
  }
}
