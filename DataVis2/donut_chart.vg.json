{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Netflix Titles by Release Decade",
  "width": 480,
  "height": 350,
  "data": { "url": "netflix_titles.csv" },
  "params": [
    {
      "name": "typeSelect",
      "value": "Movie",
      "bind": {
        "input": "select",
        "options": ["Movie", "TV Show"],
        "labels": ["Movies", "TV Shows"],
        "name": "Select Type: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.type == typeSelect" },
    {
      "calculate":
        "datum.release_year < 1980 ? 'Before 1980' : (floor(datum.release_year/10)*10) + 's'",
      "as": "Decade"
    },
    { "aggregate": [{ "op": "count", "as": "Count" }], "groupby": ["Decade"] }
  ],
  "mark": { "type": "arc", "innerRadius": 60, "stroke": "white", "strokeWidth": 1 },
  "encoding": {
    "theta": { "field": "Count", "type": "quantitative" },
    "color": {
      "field": "Decade",
      "type": "nominal",
      "title": "Release Decade",
      "sort": ["Before 1980", "1980s", "1990s", "2000s", "2010s", "2020s"],
      "scale": { "range": ["#FFF5E5", "#FFE0B2", "#FFC680", "#FFA64D", "#FF8C1A", "#E65C00"] }
    },
    "tooltip": [
      { "field": "Decade", "title": "Decade" },
      { "field": "Count", "title": "Number of Titles" }
    ]
  },
  "config": {
    "view": { "stroke": "transparent" },
    "axis": { "domain": false, "ticks": false, "labels": false, "grid": false },
    "legend": { "orient": "right", "labelFontSize": 12, "titleFontSize": 13 }
  }
}
