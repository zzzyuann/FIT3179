{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 380,
  "title": "Netflix Movies per Million Population",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "#e0f3f8"},  
      "data": {"sphere": true}  
    },
    {
      "mark": {"type": "geoshape", "stroke": "#cccccc", "fill": "none"},
      "data": {"graticule": {"step": [30, 30]}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#ababab", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {"url": "netflix_country_counts.csv"},
            "key": "country",
            "fields": ["titles_per_million"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "titles_per_million",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 55, 100],
            "range": ["#FFF5E5", "#FFD580", "#FFA64D", "#FF6347", "#B22222"]
          },
          "legend": {"title": "Movies per Million Population"}
        },
        "tooltip": [
          {"field": "properties.NAME", "title": "Country"},
          {"field": "titles_per_million", "type": "quantitative", "title": "Movies per Million", "format": ","}
        ]
      }
    }
  ]
}
