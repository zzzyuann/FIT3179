{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Global Distribution of Netflix Movies by Country",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "#e0f3f8"},
      "data": {"sphere": true}  
    },
    {
      "mark": {"type": "geoshape", "stroke": "#cccccc", "fill": "none"},
      "data": {"graticule": {"step": [30, 30]}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#ababab", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {"url": "netflix_country_counts.csv"},
            "key": "country",
            "fields": ["count"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "count",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 100, 500, 1000, 2000],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": {"title": "Number of Netflix Titles"}
        },
        "tooltip": [
          {"field": "properties.NAME", "title": "Country"},
          {"field": "count", "type": "quantitative", "title": "Titles", "format": ","}
        ]
      }
    }
  ]
}